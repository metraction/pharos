    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch http",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "http",
                "--enricherPath",
                "../testdata/enrichers/enrichers.yaml",
                "--prometheus.auth.username",
                "admin",
                "--prometheus.auth.password",
                "verysecret",
                "--prometheus.auth.token",
                "verysecrettoken",
                // "--config",
                // "./testdata/config/pharos.yaml",
            ], 
        },
        {
            "name": "Launch scheduler",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "scheduler",
                "--config",
                "./testdata/config/scheduler.yaml",
                "--port",
                "9080"
            ], 
        },
        {
            "name": "Launch scanner",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "scanner",
            ], 
        },
        {
            "name": "Launch prometheus reporter",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "args": [
                "prometheus-reporter",
                // "--prometheus.ttl",
                // "1m",
                "--prometheus.url",
                "https://prometheus.enpace.local",
            ], 
        },
    ]
}